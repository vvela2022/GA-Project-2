<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LandPost</title>
</head>
<body>
    <%- include('partials/nav.ejs') %>
    <h2>LandPost</h2>
    <div>
        <h2><%=post.user%></h2>
        <img src="<%=post.image%>" style="width: 500px">
        <div>
            <p><%=post.body%></p>
        </div>
        <button><a href="/blog/<%=post.id%>/edit">Edit Post</a></button>
        <button><a href="/blog/<%=post.id%>/remove">Delete Post</a></button>
        <button><a href="/comments/<%=post.id%>/new">New Comment</a></button>

        
    </div>

    <section>
        <h2>Comments</h2>
        <ul>
          <%comments.forEach ( comment => { %>
          <li><%= comment.body %> <button><form action="/comments/<%=comment._id%>?_method=DELETE" method="POST">
            <input class="button is-danger" type="submit" value="Delete Comment"/> </button></li>
          <% }) %>
        </ul>
      </section>
</body>
</html>